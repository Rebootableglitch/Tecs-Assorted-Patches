	<!-- Need to Add Minerals rocks 
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[thingClass="Mineable"]</xpath>
		<value>
			<li Class="Celsius.ThingThermalProperties">
				<heatCapacity>250000</heatCapacity>
