<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- INSULATION -->

	<!-- Buildings (walls & doors) -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationFindMod">
				<mods>
					<li>Celsius</li>
				</mods>
				<match Class="PatchOperationSequence">
					<operations>

					<li Class="PatchOperationFindMod">
						<mods>
							<li>Insulation (Continued)</li>
						</mods>
						<match Class="PatchOperationSequence">
							<operations>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Underpowered_Biomass_Unpowered"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2100</heatCapacity>
											<conductivity>0.6</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Biomass"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>1900</heatCapacity>
											<conductivity>0.8</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Underpowered_Fibre_Unpowered"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2400</heatCapacity>
											<conductivity>0.5</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>
								
								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Fibre"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2200</heatCapacity>
											<conductivity>0.7</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Underpowered_Polymer_Unpowered"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2700</heatCapacity>
											<conductivity>0.42</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>
								
								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Polymer"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2500</heatCapacity>
											<conductivity>0.65</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Underpowered_Hyper_Unpowered"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>3000</heatCapacity>
											<conductivity>0.36</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>
								
								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="INSShip_Beam_Hyper"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2800</heatCapacity>
											<conductivity>0.55</conductivity>
											<volume>15</volume>
										</li>
									</value>
								</li>

								<!-- Airlocks -->

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="ShipAirlockBiomass"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>1750</heatCapacity>
											<conductivity>0.7</conductivity>
											<volume>7.5</volume>
											<airflowWhenOpen>1.0</airflowWhenOpen>
										</li>
									</value>
								</li>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="ShipAirlockFibre"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2000</heatCapacity>
											<conductivity>0.58</conductivity>
											<volume>7.5</volume>
											<airflowWhenOpen>1.0</airflowWhenOpen>
										</li>
									</value>
								</li>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="ShipAirlockPolymer"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2250</heatCapacity>
											<conductivity>0.48</conductivity>
											<volume>7.5</volume>
											<airflowWhenOpen>1.0</airflowWhenOpen>
										</li>
									</value>
								</li>

								<li Class="PatchOperationAddModExtension">
									<xpath>Defs/ThingDef[defName="ShipAirlockHyper"]</xpath>
									<value>
										<li Class="Celsius.ThingThermalProperties">
											<heatCapacity>2500</heatCapacity>
											<conductivity>0.41</conductivity>
											<volume>7.5</volume>
											<airflowWhenOpen>1.0</airflowWhenOpen>
										</li>
									</value>
								</li>
							
							</operations>
						</match>
					</li>
					
					</operations>
				</match>
			</li>
			
			</operations>
		</match>
	</Operation>

</Patch>
