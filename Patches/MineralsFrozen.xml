<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Water Freezes</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>
		
				<!-- ========== Gem Tiles ========== -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Ice-WaterShallow"]/modExtensions/li[@Class="FertileFields.Terrain"]/above</xpath>
				<value>
					<li>WF_LakeIceThin</li>
					<li>WF_LakeIce</li>
					<li>WF_LakeIceThick</li>
					<li>WF_MarshIceThin</li>
					<li>WF_MarshIce</li>
					<li>WF_RiverIceThin</li>
					<li>WF_RiverIce</li>
					<li>WF_RiverIceThick</li>
				</value>
			</li>

			</operations>
		</match>
    </Operation>
	
	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>MineralsFrozen_SK</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>
		
				<!-- ========== Gem Tiles ========== -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Ice-WaterShallow"]/modExtensions/li[@Class="FertileFields.Terrain"]</xpath>
				<value>
					<products>
					  <IceBlocks>2</IceBlocks>
					</products>
				</value>
			</li>

			</operations>
		</match>
    </Operation>
	
</Patch>